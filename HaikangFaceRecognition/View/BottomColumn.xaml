<UserControl x:Name="BottomColumnBox" x:Class="DeploymentTools.View.BottomColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeploymentTools.View"
             mc:Ignorable="d" d:DesignWidth="800" Height="25" Background="#FF007ACC">
    <Grid>
        <ProgressBar x:Name="LoadingName"  Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0"  IsIndeterminate="True" Margin="8,7,0,-2"  Width="11" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left"  />
        <Label x:Name="CurrentState" Content="就绪" HorizontalAlignment="Left" Margin="28,0,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Polygon Points="14,16 0,16 3,5 17,5" 
            StrokeThickness="1" Stroke="White" Margin="5,2,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="23" />

        <!--左下宽 下左角度 左下宽-->
        <!--Polygon总是自动闭合-->
    </Grid>
</UserControl>
